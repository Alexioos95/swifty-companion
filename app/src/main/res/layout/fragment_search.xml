<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/search"
        android:inputType="text"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background"/>
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".SearchFragment">
            <!-- HEADER -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/stud_photo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/shape_circle"
                    android:contentDescription="@string/photo_stud"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/stud_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/undefined"
                    android:textSize="16sp"
                    android:textColor="@color/lightBlack"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/stud_photo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/stud_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/undefined"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/lightBlack"
                    app:layout_constraintTop_toBottomOf="@id/stud_login"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- BODY -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/body_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightBlack"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/header_wrapper">
                <!-- LOCATION -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/location_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="@id/body_wrapper"
                    app:layout_constraintEnd_toEndOf="@id/body_wrapper"
                    app:layout_constraintStart_toStartOf="@id/body_wrapper">
                    <TextView
                        android:id="@+id/stud_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/undefined"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.483"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/location_wrapper"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- CONTACT -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/contact_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:elevation="2dp"
                    app:layout_constraintTop_toBottomOf="@id/location_wrapper"
                    app:layout_constraintEnd_toEndOf="@id/body_wrapper"
                    app:layout_constraintStart_toStartOf="@id/body_wrapper">
                    <TextView
                        android:id="@+id/stud_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/undefined"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.483"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/contact_wrapper"/>
                    <TextView
                        android:id="@+id/stud_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/undefined"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.483"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/stud_phone"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- MISC -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/misc_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:elevation="2dp"
                    app:layout_constraintTop_toBottomOf="@id/contact_wrapper"
                    app:layout_constraintEnd_toEndOf="@id/body_wrapper"
                    app:layout_constraintStart_toStartOf="@id/body_wrapper">
                    <!-- WALLET -->
                    <TextView
                        android:id="@+id/wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wallet"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlack"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/stud_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/undefined"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/wallet"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <!-- EVALUATION POINTS -->
                    <TextView
                        android:id="@+id/eval_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/evaluation_points"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/lightBlack"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/wallet"/>
                    <TextView
                        android:id="@+id/stud_eval_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/undefined"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@id/eval_points"
                        app:layout_constraintTop_toBottomOf="@id/wallet"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- LEVEL -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/level_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:elevation="2dp"
                    app:layout_constraintTop_toBottomOf="@id/misc_wrapper">
                    <TextView
                        android:id="@+id/stud_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/undefined"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.483"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/level_wrapper"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- FOOTER -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/footer_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="4dp"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/body_wrapper">
                <LinearLayout
                    android:id="@+id/footer_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="@id/footer_wrapper"
                    app:layout_constraintBottom_toBottomOf="@id/footer_wrapper">
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>